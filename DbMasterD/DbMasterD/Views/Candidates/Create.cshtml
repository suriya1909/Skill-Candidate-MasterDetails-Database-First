@model DbMasterD.Models.ViewModels.CandidateVM
@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="row">
        <div class="col-6">
            <h2 class="display-4 mb-4">New Candidates</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row mb-2 mt-2">
                <label asp-for="CandidateName" class="form-label-sm col-3"></label>
                <input asp-for="CandidateName" class="form-control-sm col-7" />
                <span asp-validation-for="CandidateName" class="text-danger col-2"></span>
            </div>
            <div class="row mb-2">
                <label asp-for="DateOfBirth" class="form-label-sm col-3"></label>
                <input asp-for="DateOfBirth" class="form-control-sm col-7" type="date" />
                <span asp-validation-for="DateOfBirth" class="text-danger col-2"></span>
            </div>
            <div class="row mb-2">
                <label asp-for="Phone" class="form-label-sm col-3"></label>
                <input asp-for="Phone" class="form-control-sm col-7" />
                <span asp-validation-for="Phone" class="text-danger col-2"></span>
            </div>
            <div class="row mb-2">
                <label asp-for="ImagePath" class="form-label-sm col-3"></label>
                <input asp-for="ImagePath" class="form-control-sm col-7" type="file" />
                <span asp-validation-for="ImagePath" class="text-danger col-2"></span>
            </div>
            <div class="row mb-2">
                <label asp-for="Fresher" class="form-check-label-sm col-3"></label>
                <input asp-for="Fresher" class="form-check-input col-7" />
                <span asp-validation-for="Fresher" class="text-danger col-2"></span>
            </div>
        </div>
        <div class="col-6">
            <h2 class="display-4 mb-0">Skills</h2>
            <div class="d-flex justify-content-end">
                <a id="btnAdd" class="btn btn-outline-success">Add more</a>
            </div>
            <div id="skillContainer">
                <script>
                    LoadData();
                </script>
            </div>
            <div class="d-flex justify-content-end mt-2">
                <input type="submit" name="Save" value="Save" class="btn btn-secondary" />
            </div>
        </div>
    </div>
</form>

<div class="d-flex justify-content-start mt-0">
    <a asp-action="Index" asp-controller="Candidates" class="btn btn-link btn-outline-dark">Back to List</a>
</div>


